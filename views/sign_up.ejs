        <body>
            <script src="https://ssl.daumcdn.net/dmaps/map_js_init/postcode.v2.js"></script>
            <div class="web_signup">
                <%-include('general/header') %>
                    <section class="detail_title" id="signup_title_web">
                        <h2>로그인 / 회원가입</h2>
                    </section>
                </div>
                <div class="mobile_signup">
                    <section class="detail_title">
                        <h2>로그인 / 회원가입</h2>
                        <script type="text/javascript">
                            function goBack() {
                                window
                                    .history
                                    .back();
                            }
                        </script>
                        <div class="btndelete">
                            <a href="#" value="취소"  onClick="history.back(); return false"><img src="images/x_icon_login@2x.png" alt="" style="width:13.95px;position:relative;left:15px">
                            </a>
                        </div>
                    </section>
                </div>
