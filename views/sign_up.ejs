            @media screen and (max-width:1079px) {
                .web_signup {
                    display: none;
                }
                #signup_title_web {
                    display: none;
                }
            }
            @media screen and (min-width:1080px) {
                .mobile_signup {
                    display: none;
                }
                #content{width: 100% !important;margin-top: 100px!important;margin-bottom:100px!important}
            }
